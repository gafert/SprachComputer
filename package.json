{
  "name": "sprachcomputer",
  "description": "Sprachcomputer mit Wortvorhersage",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Michael Gafert",
    "email": "your.email@domain.com",
    "url": "https://your-website.com"
  },
  "build": {
    "appId": "com.sprachcomputer",
    "productName": "Sprachcomputer",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "icon": "./public/icons/icon.icns",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "./public/icons/icon.png"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "./public/**/*"
    ],
    "directories": {
      "buildResources": "public"
    }
  },
  "dependencies": {
    "@types/react": "^16.8.23",
    "electron-is-dev": "^1.0.1",
    "fit-textarea": "^1.1.1",
    "fontawesome": "^5.6.3",
    "insert-text-textarea": "^2.0.1",
    "node-sass": "^4.12.0",
    "predictionary": "^1.4.4",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-scripts": "2.1.5",
    "robotjs": "^0.6.0",
    "serialport": "^7.1.5",
    "yarn": "^1.22.0"
  },
  "homepage": "./",
  "main": "public/electron.js",
  "scripts": {
    "start": "rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "version": "electron -v && electron -a",
    "electron-dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "yarn build",
    "electron-pack": "build -m",
    "rebuild": "npm rebuild --runtime=electron --target=4.2.12 --disturl=https://atom.io/download/atom-shell --abi=69"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "@rescripts/cli": "^0.0.10",
    "@rescripts/rescript-env": "^0.0.5",
    "concurrently": "^4.1.0",
    "electron": "^11.5.0",
    "electron-builder": "^20.38.5",
    "typescript": "^3.5.3",
    "wait-on": "^3.2.0"
  }
}
